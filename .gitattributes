# Set default behavior to automatically normalize line endings
* text=auto

# JavaScript files should always use LF line endings
*.js text eol=lf
*.json text eol=lf

# Markdown files
*.md text eol=lf

# Config files
.editorconfig text eol=lf
.gitignore text eol=lf
.prettierignore text eol=lf

# YAML files
*.yml text eol=lf
